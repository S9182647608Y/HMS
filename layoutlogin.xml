<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogInFragment">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/LogInTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"
            android:background="#F7D119"
            android:text="HMS RAM"
            android:textAlignment="center"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="133dp"
            android:background="#be3c3737"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etEmailLogIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_email_black_24dp"/>

            <com.example.surface.hotelapp.EditTextPasswords
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="38dp"

                android:drawableLeft="@drawable/ic_security_black_24dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnLogIn"
                android:layout_width="243dp"
                android:layout_height="50dp"
                android:layout_marginTop="125dp"
                android:background="#60E0BC"
                android:text="Log In" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSignInLog"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@+id/login_layout"
            android:layout_marginTop="131dp"
            android:background="#20F719"
            android:gravity="fill_vertical|center"
            android:onClick="signUp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Don't have an account? Sign Up" />

    </RelativeLayout>

</LinearLayout>
